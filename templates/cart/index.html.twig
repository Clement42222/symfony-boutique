{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-5">
		<h1>Mon panier</h1>

		<div class="row">
			<div class="col-md-8">
				{% for product in cart %}
					<div class="row mt-2">

						<div class="col-md-2">
							<img src="/uploads/{{ product.object.illustration }}" class="img-fluid" alt="{{ product.object.name }}">
						</div>

						<div class="col-md-4">
							<strong>{{ product.object.name }}</strong>
							<span class="d-block small">Prix Unitaire HT :
								{{ product.object.price | price }}</span>
						</div>

						<div class="col-md-3 text-right">
							<a class="text-decoration-none text-black" href="{{ path('app_cart_decrease', { id: product.object.id }) }}">-</a>

							<span class="badge text-bg-secondary">x{{ product.qty }}
							</span>
							<a class="text-decoration-none text-black" href="{{ path('app_cart_add', { id: product.object.id }) }}">+</a>

						</div>

						<div class="col-md-3">
							<small>Prix TTC :
							</small>
							<strong>{{ (product.qty * product.object.pricewt) | price }}</strong>

						</div>
					</div>
				{% endfor %}


			</div>
			<div class="col-md-4">
				<div class="bg-light p-3">
					<div class="d-flex justify-content-between">
						<span class="fw-bold">Total Produit</span>
						<span>{{ fullCartQuantity }}</span>
					</div>

					<div class="d-flex justify-content-between mt-3">
						<span class="fw-bold">Prix Total HT</span>
						<span>{{ totalHt | price }}</span>
					</div>

					<div class="d-flex justify-content-between mt-3">
						<span class="fw-bold">Prix Total TVA</span>
						<span>{{ (totalWt - totalHt) | price }}</span>
					</div>

					<div class="d-flex justify-content-between mt-3">
						<span class="fw-bold">Prix Total TTC</span>
						<span>{{ totalWt | price }}</span>
					</div>

					<div>
						{% if cart | length %}
							<a href="{{ path('app_order') }}" class="btn btn-success w-100 mt-3">Commander</a>
						{% endif %}
					</div>
				</div>

				{# <a class="btn btn-danger" href="{{ path('app_cart_remove') }}">Vider mon panier</a> #}
			</div>
		</div>
	</div>
{% endblock %}
